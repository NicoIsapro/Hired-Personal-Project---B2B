<!DOCTYPE html>
<html lang="en">

<head>
    {% embed('@WebBundle/Resources/views/Layouts/admin_assets.html.twig') %}
    {% endembed %}
    <!-- Title Page-->
    <title>Admin Dashboard - {{ WebInfos.0.webtitle }}</title>
</head>

<body class="animsition">
    <div class="page-wrapper">
      {% embed('@WebBundle/Resources/views/Layouts/admin_header.html.twig') %}
      {% endembed %}
            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                              <div class="col-lg-6">
                                  <div class="card">
                                      <div class="card-header">
                                          <strong>Website</strong> Settings
                                      </div>
                                      <div class="card-body card-block">
                                          <form action="" method="post" enctype="multipart/form-data" class="form-horizontal">
                                              <div class="row form-group">
                                                  <div class="col col-md-3">
                                                      <label class=" form-control-label">Maintenance</label>
                                                  </div>
                                                  <div class="col-12 col-md-9">
                                                    <label class="switch switch-text switch-danger switch-pill">
                                                        <input type="checkbox" class="switch-input" checked="">
                                                        <span data-on="On" data-off="Off" class="switch-label"></span>
                                                        <span class="switch-handle"></span>
                                                    </label>
                                                  </div>
                                              </div>
                                              <div class="row form-group">
                                                  <div class="col col-md-3">
                                                      <label for="text-input" class=" form-control-label">Website title</label>
                                                  </div>
                                                  <div class="col-12 col-md-9">
                                                      <input type="text" id="text-input" name="text-input" placeholder="{{ WebInfos.0.webtitle }}" class="form-control">
                                                      <small class="form-text text-muted">Title of website</small>
                                                  </div>
                                              </div>
                                              <div class="row form-group">
                                                  <div class="col col-md-3">
                                                      <label for="email-input" class=" form-control-label">Admin Email</label>
                                                  </div>
                                                  <div class="col-12 col-md-9">
                                                      <input type="email" id="email-input" name="email-input" placeholder="{{ WebInfos.0.email }}" class="form-control">
                                                      <small class="help-block form-text">Email used for contact</small>
                                                  </div>
                                              </div>
                                              <div class="row form-group">
                                                  <div class="col col-md-3">
                                                      <label for="text-input" class=" form-control-label">Phone</label>
                                                  </div>
                                                  <div class="col-12 col-md-9">
                                                      <input type="text" id="text-input" name="text-input" placeholder="{{ WebInfos.0.phone }}" class="form-control">
                                                      <small class="form-text text-muted">Contact phone number</small>
                                                  </div>
                                              </div>
                                              <div class="row form-group">
                                                  <div class="col col-md-3">
                                                      <label for="text-input" class=" form-control-label">Address</label>
                                                  </div>
                                                  <div class="col-12 col-md-9">
                                                      <input type="text" id="text-input" name="text-input" placeholder="{{ WebInfos.0.address }}" class="form-control">
                                                      <small class="form-text text-muted">Address of reference</small>
                                                  </div>
                                              </div>
                                              <div class="row form-group">
                                                  <div class="col col-md-3">
                                                      <label for="textarea-input" class=" form-control-label">Tags</label>
                                                  </div>
                                                  <div class="col-12 col-md-9">
                                                      <textarea name="textarea-input" id="textarea-input" rows="9" placeholder="{{ WebInfos.0.tags }}" class="form-control"></textarea>
                                                  </div>
                                              </div>
                                                  <div class="row form-group">
                                                      <div class="col col-md-3">
                                                          <label for="file-input" class=" form-control-label">Favicon</label>
                                                      </div>
                                                      <div class="col-12 col-md-9">
                                                          <input type="file" id="file-input" name="file-input" class="form-control-file">
                                                      </div>
                                                  </div>
                                                </form>
                                              </div>
                                            <div class="card-footer">
                                                <button type="submit" class="btn btn-primary btn-sm">
                                                 <i class="fa fa-dot-circle-o"></i> Submit
                                                </button>
                                            </div>
                                        </div>
                                      </div>
                                    </div>
                              {% embed('@WebBundle/Resources/views/Layouts/copyright.html.twig') %}
                              {% endembed %}
                    </div>
                </div>
            </div>
            <!-- END MAIN CONTENT-->
            <!-- END PAGE CONTAINER-->
        </div>
    </div>
    {% embed('@WebBundle/Resources/views/Layouts/admin_js.html.twig') %}
    {% endembed %}
</body>
</html>
<!-- end document-->