<!DOCTYPE html>
<html lang="en">

<head>
    {% embed('@WebBundle/Resources/views/Layouts/admin_assets.html.twig') %}
    {% endembed %}
    <title>Admin Dashboard - {{ WebInfos.0.webtitle }}</title>
</head>

<body class="animsition">
    <div class="page-wrapper">
      {% embed('@WebBundle/Resources/views/Layouts/admin_header.html.twig') %}
      {% endembed %}
            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                              <!-- USER DATA-->
                              <div class="user-data m-b-30">
                                  <h3 class="title-3 m-b-30">
                                      <i class="zmdi zmdi-account-calendar"></i>user data</h3>
                                  <div class="filters m-b-45">
                                      <div class="rs-select2--dark rs-select2--md m-r-10 rs-select2--border">
                                          <select class="js-select2" name="property">
                                              <option selected="selected">All Roles</option>
                                              <option value="">Admin</option>
                                              <option value="">Buyer</option>
                                          </select>
                                          <div class="dropDownSelect2"></div>
                                      </div>
                                      <div class="rs-select2--dark rs-select2--sm rs-select2--border">
                                          <select class="js-select2 au-select-dark" name="time">
                                              <option selected="selected">No Filter</option>
                                              <option value="">By Company</option>
                                              <option value="">By Date</option>
                                          </select>
                                          <div class="dropDownSelect2"></div>
                                      </div>
                                  </div>
                                  <div class="table-responsive table-data">
                                      <table class="table">
                                          <thead>
                                              <tr>
                                                  <td>name</td>
                                                  <td>role</td>
                                                  <td>company</td>
                                                  <td>username</td>
                                                  <td></td>
                                              </tr>
                                          </thead>
                                          <tbody>
                                            {% for user in users %}
                                              <tr>
                                                  <td>
                                                      <div class="table-data__info">
                                                          <h6>{{ user.surname }} {{ user.name }}</h6>
                                                          <span>
                                                              <a href="mailto:{{ user.email }}">{{ user.email }}</a>
                                                          </span>
                                                      </div>
                                                  </td>
                                                  <td>
                                                    {% if user.roles == 'ROLE_ADMIN' %}
                                                      <span class="role admin">Admin</span>
                                                    {% endif %}
                                                    {% if user.roles == 'ROLE_CLIENT' %}
                                                      <span class="role member">Buyer</span>
                                                    {% endif %}
                                                  </td>
                                                  <td>
                                                    <span class="role user">{{ user.company }}</span>
                                                  </td>
                                                  <td>
                                                    {{ user.username }}
                                                  </td>
                                                  <td>
                                                      <span class="more">
                                                          <i class="zmdi zmdi-close"></i>
                                                      </span>
                                                  </td>
                                              </tr>
                                              {% endfor %}
                                          </tbody>
                                      </table>
                                  </div>
                                  <div class="user-data__footer">
                                      <button class="au-btn au-btn-load">load more</button>
                                  </div>
                              </div>
                            {% embed('@WebBundle/Resources/views/Layouts/copyright.html.twig') %}
                            {% endembed %}
                    </div>
                </div>
            </div>
            <!-- END MAIN CONTENT-->
            <!-- END PAGE CONTAINER-->
        </div>
    </div>
    {% embed('@WebBundle/Resources/views/Layouts/admin_js.html.twig') %}
    {% endembed %}
</body>

</html>
<!-- end document-->